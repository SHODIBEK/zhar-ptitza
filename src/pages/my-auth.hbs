{{#extend "layout"}}
{{#content "main"}}



<section class="auth-panel">
    <div class="container">
        <form action="#" class="auth-panel__body" data-need-validation>
            <h3 class="auth-panel__title">
                Войти
                <br> в личный кабинет
            </h3>

            <div class="auth-panel__form">
                <div class="auth-panel__phone">
                    <input type="tel" class="booking__checkout-form-input booking__checkout-form-input--phone js-phone-input" placeholder="+7 (ххх) ххх хх хх" required="" data-parsley-phone="" inputmode="text">
                </div>

                <div class="auth-panel__btn-go">
                    <button class="booking__checkout-form-submit m-0" type="submit">
                        Продолжить
                    </button>
                </div>
            </div>

            <div class="auth-panel__tip">
                <label class="form-page__form-policy-checkbox">
                    <input type="checkbox" value="Y" class="form-page__form-policy-checkbox-input" name="policy" required="" checked="">
                    <span class="form-page__form-policy-checkbox-mark">
                        <svg width="14" height="14" aria-hidden="true" class="icon-checkmark">
                            <use xlink:href="#checkmark"></use>
                        </svg>
                    </span>

                    <span class="form-page__form-policy-checkbox-text">
                        Я ознакомился и подтверждаю согласие с Политикой конфидициальности и условия использования
                        cookies, и даю согласие на обработку моих персональных данных.
                    </span> 
                </label>
            </div>
        </form>
    </div>
</section>


{{/content}}
{{/extend}}