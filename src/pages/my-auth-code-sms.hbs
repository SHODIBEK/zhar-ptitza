{{#extend "layout"}}
{{#content "main"}}


<section class="auth-panel">
    <div class="container">
        <form action="#" class="auth-panel__body">
            <h3 class="auth-panel__title mb-0">
                Введите код из смс
            </h3>

            <div class="auth-panel__desc">
                <p>
                    Мы отправили его на номер <br>+7 (999) **-**-93
                </p>
                {{!-- <p>
                    Введите последние 4 цифры входящего звонка
                </p> --}}
            </div>

            <div class="auth-panel__form">
                <div class="auth-panel__code js-otp-groups">
                    
                </div>

                <div class="auth-panel__btn-go">
                    <button class="booking__checkout-form-submit js-submit" type="submit" disabled >
                        Продолжить
                    </button>
                </div>
            </div>

            <div class="auth-panel__tip text-center js-timer-text">
                Запросить код повторно можно через <span class="js-timer" data-time="60">60</span> секунд
            </div>

            <div class="auth-panel__actions">
                <div class="auth-panel__actions__item">
                    <a href="#" class="auth-panel__actions__call js-timer-restart">Позвонить еще раз</a>
                </div>
                <div class="auth-panel__actions__item">
                    <a href="#"
                        data-tippy-content="Проблемы могут быть со стороны сотового оператора. Обратитесь в службу поддержки"
                        data-tippy-placement="bottom">
                        Мне никто не звонит
                    </a>
                </div>
            </div>
        </form>
    </div>
</section>


{{/content}}
{{/extend}}