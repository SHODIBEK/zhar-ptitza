{{#extend "layout"}}
{{#content "main"}}


<section class="auth-panel">
    <div class="container">
        <form action="#" class="auth-panel__body">
            <h3 class="auth-panel__title mb-0">
                Введите код
            </h3>

            <div class="auth-panel__desc">
                <p>
                    В ближайшее время поступит звонок на номер +7 (999) 434-93-93
                </p>
                <p>
                    Введите последние 4 цифры входящего звонка
                </p>
            </div>

            <div class="auth-panel__form">
                <div class="auth-panel__code">
                    <div class="auth-panel__code__label">+7 (ххх) ххх</div>
                    <input type="text" class="auth-panel__code__input js-code-input" placeholder="xx xx">
                </div>

                <div class="auth-panel__btn-go">
                    <button class="booking__checkout-form-submit" type="submit">
                        Продолжить
                    </button>
                </div>
            </div>

            <div class="auth-panel__tip">
                Запросить код повторно можно через 36 секунд
            </div>

            <div class="auth-panel__actions">
                <div class="auth-panel__actions__item">
                    <a href="#">Позвонить еще раз</a>
                </div>
                <div class="auth-panel__actions__item">
                    <a href="#" class="js-tooltip" 
                        data-tippy-content="Проблемы могут быть со стороны сотового оператора. Обратитесь в службу поддержки"
                        data-tippy-placement="bottom">
                        Мне никто не звонит
                    </a>
                </div>
            </div>
        </form>
    </div>
</section>


{{/content}}
{{/extend}}